<html>
<head>
	<title>Join</title>
</head>

<body>


		<% if flash[:errors] %>
			<% flash[:errors].each do |error| %>
				<%= error %>
			<% end %>
		<% end %>

		<%= form_for @user, url: {action: "create"}, html: {class: "user_form"} do |f| %>
			<%= f.label :username %>
			<%= f.text_field :username %><br>
			<%= f.label :email %>
			<%= f.text_field :email %><br>
			<%= f.label :gender %>
			<%= f.select :gender, [['Woman', "woman"], ['Man', "man"]] %><br>
			<%= f.label :seeking %>
			<%= f.select :seeking, [['Women', "women"], ['Men', "men"]] %><br>
			<%= f.label :age %>
			<%= f.text_field :age %><br>
			<%= f.label :image %>
			<%= f.file_field :image %><br>
			<%= f.label :password %>
			<%= f.text_field :password %><br>
			<%= f.label :Confirm %>
			<%= f.text_field :password_confirmation %><br>
			<%= f.submit :Join %>
		<% end %>

	<br><br>

<a href="/sessions/login">Log in</a>

</body>
</html>